<Page x:Class="JobTrackerBeta.SearchResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JobTrackerBeta"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchResults">

  <Grid Background="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="20*" />
      <RowDefinition Height="80*" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Orientation="Horizontal">
      <TextBlock FontWeight="Bold" Text="Search Results" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" Margin="20"/>
    </StackPanel>
    <StackPanel Name="GridPanel" Grid.Row="1" Orientation="Vertical"> 
      <ListBox Name="SearchListBox" Margin="15,15,30,0" Width="auto" Loaded="SearchListBox_Loaded" Height="auto">
      </ListBox>
    </StackPanel>
  </Grid>
</Page>
